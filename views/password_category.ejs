<%- include('header') %>

    <div class="container">
        <div class="row">
            <h1 class="text-center">
                Password Category Lists
            </h1>
            <br>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(records.length > 0){
                        records.forEach(function(row){ %>
                        <tr>
                            <td>
                                <%= row.password_category %>
                            </td>
                            <td><a class="btn btn-primary btn-xs" href="/passwordCategory/edit/<%= row._id %>"><i class="fa fa-edit">Edit</i></a>
                                <a class="btn btn-danger btn-xs" href="/passwordCategory/delete/<%= row._id %>"><i class="fa fa-trash">Delete</i></a>
                            </td>
                        </tr>
                        <% }) } %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('footer') %>